&lt;!--                    LONG NAME: DocBook-like Paragraph                            -->
&lt;!ENTITY % para.content 
  " 
  (#PCDATA)*
  "
>
&lt;!ENTITY % para.attributes
  '
  %univ-atts;          
  keyref
    CDATA
    #IMPLIED
